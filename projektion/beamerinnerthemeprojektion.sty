\def\prjktn@inner@false{f}
\def\prjktn@inner@true{t}

\DeclareOptionBeamer{sectiontitles}{\def\prjktn@inner@sectiontitles{#1}}
\ExecuteOptionsBeamer{sectiontitles=t} % default value
\ProcessOptionsBeamer
