\mode<presentation>

%This template uses a 16:9 paper-format
\geometry{paperwidth=33.867cm,paperheight=19.05cm}

\newlength{\titlepagelinewidth}
\setlength{\titlepagelinewidth}{.7\paperwidth}
\newlength{\titleheight}
\setlength{\titleheight}{1.5cm}
\newlength{\titlebarheight}
\setlength{\titlebarheight}{.6666\paperheight}

\setlength{\rightmargin}{.1\paperwidth}
\setlength{\leftmargin}{.1\paperwidth}
\setlength{\leftmargini}{1em}
\setlength{\leftmarginii}{3em}
\setlength{\leftmarginiii}{3em}

% Load all the parts
\DeclareOptionBeamer{sectiontitles}{
  \PassOptionsToPackage{sectiontitles=#1}{beamerinnerthemepolynom}
}
\ProcessOptionsBeamer

\useinnertheme{polynom}
\useoutertheme{polynom}
\usecolortheme{polynom}
\usefonttheme{polynom}


\mode<all> 